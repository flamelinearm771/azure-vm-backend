# Terraform Variables File Example
# Copy this to terraform.tfvars and fill in your values
# IMPORTANT: Do NOT commit terraform.tfvars to git (use .gitignore)

subscription_id = ""  # Set to your Azure subscription ID
location        = "eastus"
rg_name         = "rg-quickclip-vm-migration"
vnet_name       = "vnet-quickclip"
vnet_cidr       = "10.0.0.0/16"
app_subnet_cidr = "10.0.1.0/24"
db_subnet_cidr  = "10.0.2.0/24"

# SECURITY: Change this to your admin workstation IP (e.g., "203.0.113.42/32")
admin_cidr = "0.0.0.0/0"

vm_size         = "Standard_B2s"
db_vm_size      = "Standard_B2s"
admin_username  = "azureuser"
ssh_public_key_path = "~/.ssh/id_rsa.pub"

# Database credentials - CHANGE THESE!
db_admin_password = "ChangeMe!2024@QuickClip"
db_name           = "quickclip_db"

# Git repository settings
git_repo_url = "https://github.com/your-org/PH-EG-QuickClip.git"
git_branch   = "main"

# Availability Zones vs Availability Set
use_zones = false

# Environment
environment = "dev"

# Tags
tags = {
  Project     = "QuickClip"
  Environment = "dev"
  ManagedBy   = "Terraform"
  Purpose     = "VM-Migration-Task1-Task2"
}
